apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ingress-minio-console
  annotations:
    kubernetes.io/ingress.class: "nginx"
    ingress.kubernetes.io/ssl-redirect: "false"
    nginx.ingress.kubernetes.io/ssl-redirect: "false"
spec:
  defaultBackend:
    service:
      name: minio
      port:
        number: 9000
  tls:
  - hosts:
      - minio-console.cluster.local
    secretName: nginx-console-tls
  rules:
  - host: minio-console.cluster.local
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: minio
            port:
              number: 9001
  - host: minio.cluster.local
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: minio
            port:
              number: 9000
